<?xml version='1.0' encoding='utf-8'?>
<widget id="it.faffolao.tombola" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Tombola</name>
    <description>
        Semplice applicazione della tombola per il cellulare Android.
    </description>
    <author email="federico_arduini@live.it" href="https://github.com/faffolao/Tombola">
        Federico Arduini (faffolao)
    </author>
    <icon src="res/icon.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
